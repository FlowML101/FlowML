# FlowML Backend Environment Variables

# App
DEBUG=true
APP_NAME="FlowML Studio"
APP_VERSION="0.1.0"

# Server
HOST=0.0.0.0
PORT=8000

# Database (SQLite for dev, Postgres for prod)
DATABASE_URL=sqlite+aiosqlite:///./flowml.db
# DATABASE_URL=postgresql+asyncpg://flowml:flowml_secret@localhost:5432/flowml

# File Storage
STORAGE_MODE=local  # local or s3
UPLOAD_DIR=./uploads
MODELS_DIR=./trained_models

# S3/MinIO (when STORAGE_MODE=s3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=flowml
S3_SECRET_KEY=flowml_secret_key
S3_BUCKET_PREFIX=flowml

# AutoML
DEFAULT_TIME_BUDGET=5
MAX_TIME_BUDGET=60
MAX_CONCURRENT_JOBS=3

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# LLM / Ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=120.0

# Ray (Phase 2 - distributed training)
# RAY_HEAD_ADDRESS=auto

# CORS - comma separated
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
