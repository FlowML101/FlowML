# FlowML Backend Environment Variables

# App
DEBUG=true
APP_NAME="FlowML Studio"
APP_VERSION="0.1.0"

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./flowml.db

# File Storage
UPLOAD_DIR=./uploads
MODELS_DIR=./trained_models

# AutoML
DEFAULT_TIME_BUDGET=5
MAX_TIME_BUDGET=60

# Redis (optional - for scaling WebSockets)
REDIS_URL=redis://localhost:6379

# Ray (Phase 2 - distributed training)
# RAY_HEAD_ADDRESS=auto

# CORS - comma separated
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
