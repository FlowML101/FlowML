# FlowML Environment Configuration
# Copy this file to .env and customize values

# ===================
# PostgreSQL
# ===================
POSTGRES_USER=flowml
POSTGRES_PASSWORD=flowml_secret_change_me
POSTGRES_DB=flowml
POSTGRES_PORT=5432

# ===================
# Redis
# ===================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ===================
# MinIO (S3-Compatible Storage)
# ===================
MINIO_ROOT_USER=flowml
MINIO_ROOT_PASSWORD=flowml_secret_key_change_me
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=http://localhost:9000

# ===================
# MLflow (Optional)
# ===================
MLFLOW_PORT=5000
MLFLOW_TRACKING_URI=http://localhost:5000

# ===================
# FlowML Backend
# ===================
# Database URL (switch between SQLite and Postgres)
# SQLite (development): sqlite:///./flowml.db
# Postgres (production): postgresql://flowml:flowml_secret@localhost:5432/flowml
DATABASE_URL=postgresql://flowml:flowml_secret_change_me@localhost:5432/flowml

# Storage backend: "local" or "s3"
STORAGE_BACKEND=s3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=flowml
S3_SECRET_KEY=flowml_secret_key_change_me
S3_BUCKET_DATASETS=datasets
S3_BUCKET_ARTIFACTS=artifacts
S3_BUCKET_RUNS=runs
S3_BUCKET_LOGS=logs

# Celery broker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===================
# Security
# ===================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===================
# Worker Settings
# ===================
WORKER_HEARTBEAT_INTERVAL=30
WORKER_MAX_CONCURRENCY=4
